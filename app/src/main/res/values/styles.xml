<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CardViewStyle.ItemStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardElevation">8dp</item>
        <item name="cardCornerRadius">16dp</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">?attr/colorSecondary</item>
    </style>

    <style name="TextFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="NavigationTabStyle" parent="Widget.Design.TabLayout">
<!--        <item name="tabBackground">@drawable/rounded_dialog</item>-->
<!--        <item name="tabSelectedTextColor">@color/primary_light</item>-->
<!--        <item name="tabIndicatorColor">@color/blue</item>-->
        <item name="tabTextAppearance">@style/NavigationTabTextStyle</item>
    </style>

    <style name="NavigationTabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/roboto_bold</item>
<!--        <item name="android:textColor">@color/primary_light</item>-->
<!--        <item name="android:textSize">12sp</item>-->
    </style>

    <style name="TextStyleBoldHead" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextStyleBoldDescription" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">24sp</item>
    </style>

    <style name="MyCustomFontStyle"> <item name="android:fontFamily">@font/roboto_bold</item> </style>
</resources>